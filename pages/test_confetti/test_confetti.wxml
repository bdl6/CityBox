<!-- pages/test_confetti/test_confetti.wxml -->
<view class="container">
  <view class="header">
    <text class="title">小程序彩带效果测试</text>
    <text class="subtitle">点击下方按钮触发彩带飘落效果</text>
  </view>
  
  <!-- 状态显示 -->
  <view class="status">
    <text class="status-text">{{statusText}}</text>
  </view>
  
  <view class="content">
    <!-- 简单测试按钮 -->
    <button class="test-btn" bindtap="simpleTest">
      简单测试按钮
    </button>
    
    <!-- 彩带效果按钮 -->
    <button class="confetti-btn" bindtap="triggerConfetti">
      触发彩带效果
    </button>
  </view>
  
  <!-- 彩带效果容器 -->
  <view class="confetti-container">
    <!-- 动态渲染彩带 -->
    <view 
      wx:for="{{confettiData}}" 
      wx:key="id"
      class="confetti-piece"
      style="left: {{item.x}}px; top: {{item.y}}px; background-color: {{item.color}}; width: {{item.size}}px; height: {{item.size / 2}}px; opacity: 0.8;"
      animation="{{confettiAnimation[index]}}"
    ></view>
  </view>
</view>