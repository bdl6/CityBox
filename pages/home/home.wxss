/* 首页样式 */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* 顶部标题 */
.header {
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #424242;
}

.header-divider {
  width: 60rpx;
  height: 1px;
  background-color: #FF7F00;
  margin-top: 10rpx;
}

/* 背景层：淡米色背景 */
.background-layer {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #FFF8E1;
  z-index: -1;
}

/* 中间文字层：随性的城市线索 */
.middle-section {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  position: relative;
}

.clue-container {
  display: flex;
  flex-direction: column;
  animation: scrollUp 20s linear infinite;
}

.clue-text {
  font-size: 36rpx;
  font-weight: normal;
  color: #424242;
  opacity: 0.4;
  margin: 30rpx 0;
  text-align: center;
  white-space: nowrap;
  font-family: "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
}

@keyframes scrollUp {
  0% {
    transform: translateY(100%);
  }
  100% {
    transform: translateY(-100%);
  }
}

/* 功能入口区 */
.entry-section {
  height: 50vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0 40rpx;
}

.explore-btn {
  width: 60%;
  background-color: #FF7F00;
  color: white;
  border-radius: 8rpx;
  font-size: 34rpx;
  font-weight: bold;
  box-shadow: inset 0 -2rpx 4rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 30rpx;
  position: relative;
  overflow: hidden;
  border: none;
  padding: 15px 0;
}

.explore-btn::after {
  content: '';
  position: absolute;
  top: -50%;
  left: -60%;
  width: 20px;
  height: 200%;
  background: rgba(255, 255, 255, 0.3);
  transform: rotate(25deg);
  transition: all 0.4s;
}

.explore-btn:hover::after {
  left: 120%;
}

.hint-text {
  font-size: 24rpx;
  color: #999;
}

/* 底部辅助区 */
.footer-section {
  height: 20vh;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 80rpx;
}

.footer-item {
  cursor: pointer;
}

.footer-item.left {
  align-self: flex-start;
}

.footer-item.right {
  align-self: flex-end;
}

.footer-text {
  font-size: 24rpx;
  color: #757575;
  transition: all 0.3s ease;
  position: relative;
}

.footer-item:active .footer-text {
  color: #FF7F00;
}

.footer-item:active .footer-text::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: -5rpx;
  width: 100%;
  height: 2rpx;
  background-color: #FF7F00;
}

/* 爆炸碎片效果 */
.particle-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 100;
}

.particle {
  position: absolute;
  border-radius: 50%;
  animation: explode 1s ease-out forwards;
}

@keyframes explode {
  0% {
    transform: translate(0, 0) scale(1);
    opacity: 1;
  }
  100% {
    transform: translate(var(--tx), var(--ty)) scale(0);
    opacity: 0;
  }
}