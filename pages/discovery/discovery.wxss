/* 地点揭秘页样式 */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部图片区 */
.image-section {
  height: 40vh;
  position: relative;
}

.main-image {
  width: 100%;
  height: 100%;
}

.upload-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background-color: rgba(0,0,0,0.5);
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  display: flex;
  align-items: center;
}

.camera-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #fff;
}

/* 地点信息区 */
.info-section {
  padding: 30rpx;
  background-color: #fff;
}

.place-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.place-tags {
  margin-bottom: 20rpx;
}

.tag {
  display: inline-block;
  background-color: #f0f0f0;
  border-radius: 20rpx;
  padding: 5rpx 20rpx;
  font-size: 24rpx;
  color: #666;
  margin-right: 15rpx;
}

.place-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* UGC 互动区 */
.ugc-section {
  flex: 1;
  background-color: #f5f5f5;
  padding: 30rpx;
}

.ugc-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.ugc-images {
  display: flex;
  white-space: nowrap;
}

.image-item {
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}

.ugc-image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

/* 底部操作区 */
.footer-section {
  padding: 30rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.diary-btn {
  width: 80%;
  background-color: #4caf50;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.hint-text {
  font-size: 24rpx;
  color: #999;
}