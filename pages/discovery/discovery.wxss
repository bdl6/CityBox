/* 地点揭秘页样式 */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* 彩带容器样式 */
.confetti-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
  z-index: 9999;
}

/* 彩带样式 */
.confetti-piece {
  position: absolute;
  border-radius: 2rpx;
  transform-origin: 50% 50%;
  pointer-events: none;
}



/* 地点信息区 */
.info-section {
  padding: 30rpx;
  background-color: #fff;
}

.place-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.place-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.tag {
  background-color: #f0f0f0;
  border-radius: 20rpx;
  padding: 5rpx 20rpx;
  font-size: 24rpx;
  color: #666;
  /* 移除原来的inline-block和margin-right */
  /* 添加flex布局下的样式 */
  white-space: nowrap;
}

.place-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}


/* 底部操作区 */
.footer-section {
  padding: 30rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.diary-btn {
  width: 80%;
  background-color: #4caf50;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.hint-text {
  font-size: 24rpx;
  color: #999;
}
