/* 地点揭秘页样式 */
.container {
  height: 100vh;
  display: flex;
  background-color: #f8f8f8;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

/* 彩带容器样式 */
.confetti-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
  z-index: 9999;
}

/* 彩带样式 */
.confetti-piece {
  position: absolute;
  border-radius: 2rpx;
  transform-origin: 50% 50%;
  pointer-events: none;
}

/* 礼物盒容器 */
.gift-container {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  perspective: 1000rpx;
}

/* 礼物盒 */
.gift-box {
  width: 320rpx;
  height: 320rpx;
  position: relative;
  cursor: pointer;
  transition: all 0.3s ease;
  transform-style: preserve-3d;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) rotateY(0deg);
  }
  50% {
    transform: translateY(-15rpx) rotateY(5deg);
  }
}

.gift-box:active {
  transform: scale(0.95) rotateY(10deg);
}

/* 礼物盒盖 */
.gift-lid {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #ff6b35, #ff4757);
  position: absolute;
  top: -10rpx;
  left: 0;
  border-radius: 15rpx 15rpx 8rpx 8rpx;
  z-index: 3;
  box-shadow: 
    0 8rpx 20rpx rgba(255, 71, 87, 0.4),
    inset 0 4rpx 8rpx rgba(255, 255, 255, 0.3),
    inset 0 -2rpx 4rpx rgba(0, 0, 0, 0.2);
  border: 2rpx solid #ff3742;
}

.gift-lid::before {
  content: "";
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  right: 8rpx;
  height: 20rpx;
  background: linear-gradient(90deg, rgba(255, 255, 255, 0.4), transparent, rgba(255, 255, 255, 0.4));
  border-radius: 8rpx;
}

/* 礼物盒身 */
.gift-body {
  width: 100%;
  height: 280rpx;
  background: linear-gradient(135deg, #ff4757, #c44569);
  position: absolute;
  top: 70rpx;
  left: 0;
  border-radius: 8rpx 8rpx 15rpx 15rpx;
  z-index: 2;
  box-shadow: 
    0 15rpx 30rpx rgba(196, 69, 105, 0.4),
    inset 0 4rpx 8rpx rgba(255, 255, 255, 0.2),
    inset 0 -4rpx 8rpx rgba(0, 0, 0, 0.3);
  border: 2rpx solid #c44569;
}

.gift-body::before {
  content: "";
  position: absolute;
  top: 15rpx;
  left: 15rpx;
  right: 15rpx;
  height: 30rpx;
  background: linear-gradient(90deg, rgba(255, 255, 255, 0.3), transparent, rgba(255, 255, 255, 0.3));
  border-radius: 8rpx;
}

/* 主丝带 - 垂直 */
.gift-ribbon {
  width: 50rpx;
  height: 100%;
  background: linear-gradient(135deg, #ffeb3b 0%, #ffc107 50%, #ff8f00 100%);
  position: absolute;
  top: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 4;
  border-radius: 10rpx;
  box-shadow: 
    0 6rpx 18rpx rgba(255, 193, 7, 0.5),
    inset 0 3rpx 6rpx rgba(255, 255, 255, 0.7),
    inset 0 -3rpx 6rpx rgba(255, 143, 0, 0.8),
    inset 3rpx 0 6rpx rgba(255, 143, 0, 0.3),
    inset -3rpx 0 6rpx rgba(255, 143, 0, 0.3);
  border: 2rpx solid #ff8f00;
}

.gift-ribbon::before {
  content: "";
  position: absolute;
  top: 15rpx;
  left: 12rpx;
  right: 12rpx;
  height: 20rpx;
  background: linear-gradient(90deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 0.9));
  border-radius: 6rpx;
}

/* 丝带交叉 - 水平 */
.gift-ribbon-cross {
  width: 98%;
  height: 50rpx;
  background: linear-gradient(135deg, #ffeb3b 0%, #ffc107 50%, #ff8f00 100%);
  position: absolute;
  top: 45%;
  left: 1%;
  z-index: 4;
  border-radius: 10rpx;
  box-shadow: 
    0 6rpx 18rpx rgba(255, 193, 7, 0.5),
    inset 0 3rpx 6rpx rgba(255, 255, 255, 0.7),
    inset 0 -3rpx 6rpx rgba(255, 143, 0, 0.8),
    inset 0 3rpx 6rpx rgba(255, 143, 0, 0.3),
    inset 0 -3rpx 6rpx rgba(255, 143, 0, 0.3);
  border: 2rpx solid #ff8f00;
}

.gift-ribbon-cross::before {
  content: "";
  position: absolute;
  top: 10rpx;
  left: 15rpx;
  right: 15rpx;
  height: 18rpx;
  background: linear-gradient(90deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 0.9));
  border-radius: 5rpx;
}

/* 蝴蝶结 */
.gift-ribbon::after {
  content: "";
  position: absolute;
  top: -25rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 75rpx;
  height: 38rpx;
  background: linear-gradient(135deg, #ffeb3b 0%, #ffc107 30%, #ff8f00 100%);
  border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
  box-shadow: 
    0 6rpx 15rpx rgba(255, 193, 7, 0.6),
    inset 0 2rpx 5rpx rgba(255, 255, 255, 0.8),
    inset 0 -2rpx 4rpx rgba(255, 143, 0, 0.9);
  border: 2rpx solid #ff8f00;
}

/* 礼物盒提示文字 */
.gift-hint {
  position: absolute;
  bottom: -100rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 26rpx;
  color: #666;
  white-space: nowrap;
  background: rgba(255, 255, 255, 0.9);
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.8;
    transform: translateX(-50%) scale(1);
  }
  50% {
    opacity: 1;
    transform: translateX(-50%) scale(1.05);
  }
}

/* 礼物盒打开动画 */
.gift-open {
  animation: giftOpen 0.8s ease-out forwards;
}

@keyframes giftOpen {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(0);
    opacity: 0;
  }
}

/* 地点信息区 */
.info-section {
  background-color: #fff;
  transition: all 0.8s ease;
  border-radius: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.2);
  position: absolute;
  top: 15vh;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  max-width: 600rpx;
}

/* 信息区域隐藏状态 */
.info-hidden {
  opacity: 0;
  transform: translateX(-50%) translateY(50rpx);
  height: 0;
  padding: 0;
  overflow: hidden;
}

/* 信息区域显示状态 */
.info-visible {
  opacity: 1;
  transform: translateX(-50%) translateY(0);
  height: auto;
  padding: 0;
}

/* 地点信息头部 */
.place-header {
  background: linear-gradient(135deg, #83d3a3 0%, #3ae791 100%);
  padding: 40rpx;
  color: white;
  border-radius: 20rpx 20rpx 0 0;
  position: relative;
  overflow: hidden;
}

.place-header::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  animation: headerShine 1.5s infinite;
}

@keyframes headerShine {
  0% {
    left: -100%;
  }
  100% {
    left: 100%;
  }
}

.place-name {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  position: relative;
  z-index: 1;
}

.place-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  position: relative;
  z-index: 1;
}

.tag {
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  padding: 8rpx 24rpx;
  font-size: 26rpx;
  color: white;
  white-space: nowrap;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.tag:nth-child(odd) {
  animation: tagFloat1 4s ease-in-out infinite;
}

.tag:nth-child(even) {
  animation: tagFloat2 4s ease-in-out infinite 0.5s;
}

@keyframes tagFloat1 {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-3rpx);
  }
}

@keyframes tagFloat2 {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-5rpx);
  }
}

/* 地点信息内容 */
.place-content {
  padding: 20rpx;
  margin-bottom: 30rpx;
  display: flex;
}

.place-description {
  justify-content: center;
  align-items:center;
  font-size: 30rpx;
  color: #555;
  line-height: 1.7;
  padding: 30rpx;
  border-radius: 20rpx;
}


/* 底部操作区 */
.footer-section {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.8s ease 0.3s; /* 添加延迟，在信息区域显示后再显示 */
}

/* 底部区域隐藏状态 */
.footer-hidden {
  opacity: 0;
  transform: translateY(50rpx);
  height: 0;
  padding: 0 30rpx;
  overflow: hidden;
}

/* 底部区域显示状态 */
.footer-visible {
  opacity: 1;
  transform: translateY(0);
  height: auto;
  padding: 30rpx;
}

.diary-btn {
  width: 80%;
  height: 100rpx;
  background-color: #4caf50;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.hint-text {
  font-size: 24rpx;
  color: #999;
}
