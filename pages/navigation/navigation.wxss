/* 导航页样式 */
.mapstyle{
  height: 60vh;
  width: 100%;
}


.container {
  height: 40vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #f8efef 0%, #e4edf9 100%);
}






/* 地图覆盖层信息 */
.map-overlay {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  right: 120rpx;
  z-index: 10;
}

.map-info {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 15rpx 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.map-status {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff6b00;
  display: block;
  margin-bottom: 5rpx;
}

.map-range {
  font-size: 24rpx;
  color: #666;
  display: block;
}

/* 地图上的退出按钮 */
.map-exit-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  z-index: 10;
  background: rgba(255, 107, 0, 0.9);
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.exit-text {
  font-size: 28rpx;
  color: white;
  font-weight: bold;
}

/* 底部信息区域 */
.bottom-section {
  overflow-y: auto;
  flex:1
}

/* 方向指引区 */
.direction-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.direction-arrow {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
  transition: transform 0.3s ease;
}

.direction-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.hint-text {
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

/* 距离显示区 */
.distance-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.distance-number {
  font-size: 80rpx;
  font-weight: bold;
  color: #ff6b00;
  line-height: 1;
}

.distance-unit {
  font-size: 32rpx;
  color: #ff6b00;
  margin-left: 10rpx;
  align-self: flex-start;
  margin-top: 10rpx;
}

.distance-label {
  font-size: 28rpx;
  color: #999;
  margin: 20rpx 0 30rpx;
}

/* 进度条 */
.progress-container {
  width: 80%;
  height: 20rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.progress-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #eee;
  border-radius: 10rpx;
}

.progress-bar {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  background: linear-gradient(90deg, #ff6b00 0%, #ff8e00 100%);
  border-radius: 10rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 28rpx;
  color: #666;
}

/* 模糊提示 */
.blur-hint {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.hint-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.hint-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 底部辅助区 */
.footer-section {
  padding: 10rpx;
  display: flex;
  justify-content: center;
}

.refresh-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.refresh-icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}

.refresh-text {
  font-size: 24rpx;
  color: #666;
}

/* 确保地图组件正常显示 */
#navigationMap {
  width: 100%;
  height: 100%;
}