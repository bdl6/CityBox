/* 导航页样式 */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.status-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.exit-btn {
  padding: 10rpx 20rpx;
}

.exit-text {
  font-size: 28rpx;
  color: #ff6b00;
}

/* 方向指引区 */
.direction-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0 40rpx;
}

.direction-arrow {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 50rpx;
  transition: transform 0.3s ease;
}

.direction-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 距离显示区 */
.distance-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0 40rpx;
}

.distance-number {
  font-size: 80rpx;
  font-weight: bold;
  color: #4caf50;
  line-height: 1;
}

.distance-unit {
  font-size: 32rpx;
  color: #4caf50;
  margin-left: 10rpx;
  align-self: flex-start;
  margin-top: 10rpx;
}

.distance-label {
  font-size: 28rpx;
  color: #999;
  margin: 20rpx 0 50rpx;
}

/* 进度条 */
.progress-container {
  width: 80%;
  height: 20rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.progress-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #eee;
  border-radius: 10rpx;
}

.progress-bar {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  background-color: #4caf50;
  border-radius: 10rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 28rpx;
  color: #666;
}

/* 底部辅助区 */
.footer-section {
  padding: 30rpx;
  display: flex;
  justify-content: center;
}

.refresh-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.refresh-icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}

.refresh-text {
  font-size: 24rpx;
  color: #666;
}