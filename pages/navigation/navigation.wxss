/* 导航页样式 */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #f5f7fa 0%, #e4edf9 100%);
}

/* 顶部状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: linear-gradient(135deg, #ff6b00 0%, #ff8e00 100%);
  color: white;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.status-text {
  font-size: 32rpx;
  font-weight: bold;
}

.exit-btn {
  padding: 10rpx 20rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
}

.exit-text {
  font-size: 28rpx;
  color: white;
}

/* 盲盒信息 */
.blindbox-info {
  background-color: white;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.info-item {
  margin-bottom: 15rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 5rpx;
}

.info-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  padding: 5rpx 15rpx;
  background-color: #ffece6;
  color: #ff6b00;
  border-radius: 15rpx;
  font-size: 20rpx;
}

/* 方向指引区 */
.direction-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0 40rpx;
}

.direction-arrow {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  transition: transform 0.3s ease;
}

.direction-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.hint-text {
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

/* 距离显示区 */
.distance-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0 40rpx;
}

.distance-number {
  font-size: 80rpx;
  font-weight: bold;
  color: #ff6b00;
  line-height: 1;
}

.distance-unit {
  font-size: 32rpx;
  color: #ff6b00;
  margin-left: 10rpx;
  align-self: flex-start;
  margin-top: 10rpx;
}

.distance-label {
  font-size: 28rpx;
  color: #999;
  margin: 20rpx 0 30rpx;
}

/* 进度条 */
.progress-container {
  width: 80%;
  height: 20rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.progress-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #eee;
  border-radius: 10rpx;
}

.progress-bar {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  background: linear-gradient(90deg, #ff6b00 0%, #ff8e00 100%);
  border-radius: 10rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 28rpx;
  color: #666;
}

/* 模糊提示 */
.blur-hint {
  background-color: white;
  margin: 0 30rpx 30rpx;
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.hint-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.hint-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 底部辅助区 */
.footer-section {
  padding: 30rpx;
  display: flex;
  justify-content: center;
}

.refresh-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.refresh-icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}

.refresh-text {
  font-size: 24rpx;
  color: #666;
}