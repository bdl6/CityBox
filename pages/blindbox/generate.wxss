/* 盲盒生成设置页样式 */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 0 40rpx;
  background-color: #f8f8f8;
}

/* 页面标题 */
.header {
  text-align: center;
  padding: 60rpx 0 40rpx;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

/* 位置信息区域 */
.location-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.location-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.location-status {
  font-size: 28rpx;
  color: #666;
}

.get-location-btn {
  padding: 10rpx 20rpx;
  background-color: #ff6b00;
  color: #fff;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 设置区域 */
.setting-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.section-header {
  margin-bottom: 30rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.section-desc {
  font-size: 24rpx;
  color: #999;
}

/* 范围设置 */
.range-setting {
  display: flex;
  align-items: center;
}

.range-display {
  display: flex;
  align-items: baseline;
  margin-left: 20rpx;
}

.range-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b00;
}

.range-unit {
  font-size: 24rpx;
  color: #999;
  margin-left: 5rpx;
}

/* 标签容器 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tag-item {
  padding: 15rpx 30rpx;
  background-color: #f0f0f0;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}

.tag-item.selected {
  background-color: #ff6b00;
  color: #fff;
}

/* 生成按钮区域 */
.generate-section {
  flex: 1;
  display: flex;
  align-items: flex-end;
  padding-bottom: 60rpx;
}

.generate-btn {
  width: 100%;
  height: 80rpx;
  background-color: #ff6b00;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
}

.generate-btn[disabled] {
  background-color: #ccc;
  color: #999;
}