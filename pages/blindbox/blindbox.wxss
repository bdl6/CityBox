/* 盲盒详情页样式 */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 40rpx;
  background-color: #f5f5f5;
}

/* 盲盒卡片 */
.blindbox-card {
  width: 90%;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.1);
  padding: 50rpx 30rpx;
  margin-top: 100rpx;
  text-align: center;
  position: relative;
}

/* 卡片滑入动画 */
.animation-slide-up {
  animation: slideUp 0.5s ease-out, shake 0.3s ease-in-out 0.5s;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-10rpx); }
  75% { transform: translateX(10rpx); }
}

.blindbox-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 30rpx;
}

.card-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.card-info {
  margin-bottom: 30rpx;
}

.distance {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.tags {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.hint-text {
  font-size: 26rpx;
  color: #999;
}

/* 操作按钮区 */
.actions {
  width: 90%;
  display: flex;
  justify-content: space-between;
  margin-top: 80rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
}

.reset-btn {
  background-color: #f0f0f0;
  color: #666;
  margin-right: 20rpx;
}

.navigate-btn {
  background-color: #ff6b00;
  color: #fff;
  margin-left: 20rpx;
}

.navigate-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

/* 底部提示 */
.bottom-hint {
  position: absolute;
  bottom: 50rpx;
  width: 100%;
  text-align: center;
}

.bottom-hint .hint-text {
  font-size: 24rpx;
  color: #999;
}