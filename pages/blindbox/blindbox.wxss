/* 盲盒详情页样式 */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 40rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #e4edf9 100%);
}

/* 盲盒卡片 */
.blindbox-card {
  width: 90%;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.1);
  padding: 50rpx 30rpx;
  margin-top: 100rpx;
  text-align: center;
  position: relative;
}

/* 卡片滑入动画 */
.animation-slide-up {
  animation: slideUp 0.5s ease-out, shake 0.3s ease-in-out 0.5s;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-10rpx); }
  75% { transform: translateX(10rpx); }
}

/* 盲盒图标容器 */
.blindbox-icon-container {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.blindbox-icon {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 0, 0.3);
}

.icon-text {
  font-size: 60rpx;
  font-weight: bold;
  color: #fff;
}

.card-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

.card-info {
  margin-bottom: 30rpx;
}

.info-item {
  margin-bottom: 25rpx;
  display: flex;
  flex-direction: column;
}

.info-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.info-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.tags-container {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-top: 10rpx;
}

.tag {
  padding: 8rpx 20rpx;
  background-color: #ffece6;
  color: #ff6b00;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.hint-text {
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
}

/* 操作按钮区 */
.actions {
  width: 90%;
  display: flex;
  justify-content: space-between;
  margin-top: 50rpx;
  margin-bottom: 300rpx;
  gap: 30rpx;
}

.action-btn {
  height: 90rpx;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
}

.reset-btn {
  background-color: #faf8f8;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
}

.navigate-btn {
  background: linear-gradient(135deg, #ff6b00 0%, #ff8e00 100%);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

/* 底部提示 */
.bottom-hint {
  position: absolute;
  bottom: 120rpx;
  width: 100%;
  text-align: center;
}

.bottom-hint .hint-text {
  font-size: 24rpx;
  color: #999;
}