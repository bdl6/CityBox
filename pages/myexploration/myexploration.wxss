/* 我的探索页样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #fff5f0 0%, #ffe8d6 50%, #ffd4b3 100%);
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Microsoft YaHei', sans-serif;
  position: relative;
}

/* 顶部标题 */
.header {
  padding: 40rpx 30rpx;
  text-align: center;
  background: linear-gradient(135deg, #ff7d00, #ff5e00);
  border-radius: 25rpx;
  box-shadow: 0 8rpx 25rpx rgba(255, 125, 0, 0.3);
  margin-bottom: 30rpx;
  position: relative;
  overflow: hidden;
}

.header::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  animation: shine 3s infinite;
}

@keyframes shine {
  0% {
    left: -100%;
  }
  100% {
    left: 100%;
  }
}

.title {
  display: block;
  font-size: 42rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 15rpx;
  position: relative;
  z-index: 1;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
  position: relative;
  z-index: 1;
}

/* 记录列表 */
.content {
  padding: 0 10rpx;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow-y: auto; /* 优化滚动行为 */
}

.exploration-card {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 25rpx;
  box-shadow: 0 8rpx 25rpx rgba(255, 125, 0, 0.18);
  transition: all 0.3s cubic-bezier(0.25, 0.1, 0.25, 1);
  position: relative;
  border: 2rpx solid #fff2e6;
  width: 100%;
  height: 580rpx;
  display: flex;
  flex-direction: column;
}

.exploration-card:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 125, 0, 0.12);
}





/* 轮播图容器 */
.swiper-container {
  width: 100%;
  height: 300rpx;
  position: relative;
  flex-shrink: 0;
}

.card-swiper {
  width: 100%;
  height: 100%;
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
}

.card-image {
  width: 100%;
  height: 100%;
  transition: transform 0.4s ease;
  object-fit: cover;
  will-change: transform;
}

.card-image.placeholder {
  background: linear-gradient(135deg, #f5f5f5, #e0e0e0);
  display: flex;
  align-items: center;
  justify-content: center;
  height: 300rpx;
  flex-shrink: 0;
}

.placeholder-text {
  font-size: 60rpx;
  color: #ccc;
}

.exploration-card:active .card-image {
  transform: scale(1.03);
}

/* 轮播图指示器样式 */
.card-swiper .wx-swiper-dots {
  bottom: 15rpx;
}

.card-swiper .wx-swiper-dot {
  width: 12rpx;
  height: 12rpx;
  margin: 0 6rpx;
  border-radius: 50%;
}

.card-swiper .wx-swiper-dot-active {
  width: 24rpx;
  border-radius: 12rpx;
}



/* 轮播图渐变遮罩 */
.swiper-container::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60rpx;
  background: linear-gradient(to top, rgba(255, 125, 0, 0.3), transparent);
  pointer-events: none;
  z-index: 1;
}

.card-content {
  padding: 25rpx;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  margin-right: 15rpx;
  line-height: 1.4;
  word-break: break-word;
  white-space: normal;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card-distance {
  font-size: 22rpx;
  color: white;
  background: linear-gradient(45deg, #ff7d00, #ff5e00);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 600;
  box-shadow: 0 3rpx 8rpx rgba(255, 125, 0, 0.3);
}

.card-date {
  display: block;
  font-size: 22rpx;
  color: #999;
  margin-bottom: 15rpx;
  font-weight: 400;
}

.card-description {
  font-size: 26rpx;
  height: 50rpx;
  color: #666;
  line-height: 50rpx;
  margin-bottom: 10rpx;
  word-wrap: break-word;
  word-break: break-all;
  overflow-y: auto;
}



.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  padding-top: 15rpx;
  position: relative;
  min-height: 40rpx;
  align-items: flex-start;
}

.tags-container::before {
  content: "";
  position: absolute;
  top: 0;
  left: 25rpx;
  right: 25rpx;
  height: 1rpx;
  background: linear-gradient(to right, transparent, #fff2e6, transparent);
}

.tag {
  font-size: 22rpx;
  color: #ff7d00;
  background-color: rgba(255, 125, 0, 0.08);
  padding: 6rpx 18rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 125, 0, 0.15);
  transition: all 0.2s ease;
  white-space: nowrap;
}

.tag:active {
  background-color: rgba(255, 125, 0, 0.15);
  transform: scale(0.96);
}

/* 清空按钮 - 固定在屏幕右上角 */
.clear-btn-fixed {
  position: fixed;
  top: 60rpx;
  right: 30rpx;
  width: 80rpx;
  height: 80rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15);
  z-index: 1000;
  transition: all 0.3s ease;
  border: 2rpx solid #f0f0f0;
}

.clear-btn-fixed:active {
  transform: scale(0.9);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.25);
  background: #f8f8f8;
}

.clear-text {
  font-size: 32rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 80rpx 40rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 25rpx;
  box-shadow: 0 8rpx 30rpx rgba(255, 125, 0, 0.1);
  text-align: center;
  border: 2rpx solid rgba(255, 125, 0, 0.1);
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-width: 600rpx;
  backdrop-filter: blur(20rpx);
}

.empty-state::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, transparent, #ff7d00, transparent);
  border-radius: 25rpx 25rpx 0 0;
}

.empty-icon {
  font-size: 160rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-15rpx);
  }
}

.empty-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #ff7d00;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(255, 125, 0, 0.1);
}

.empty-subtext {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 50rpx;
  line-height: 1.6;
  padding: 0 30rpx;
  opacity: 0.8;
}

.explore-btn {
  width: 75%;
  background: linear-gradient(135deg, #ff7d00, #ff5e00);
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  padding: 28rpx 0;
  box-shadow: 0 10rpx 25rpx rgba(255, 125, 0, 0.3);
  border: none;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.explore-btn::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.explore-btn:active {
  transform: translateY(-3rpx);
  box-shadow: 0 15rpx 30rpx rgba(255, 125, 0, 0.4);
}

.explore-btn:active::before {
  left: 100%;
}

.explore-btn::after {
  border: none;
}