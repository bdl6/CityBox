/* 我的探索页样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #e4edf9 100%);
  padding: 20rpx;
  box-sizing: border-box;
}

/* 顶部标题 */
.header {
  padding: 40rpx 20rpx;
  text-align: center;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 30rpx;
  position: relative;
  overflow: hidden;
}

.header::before {
  content: "";
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 107, 0, 0.1) 0%, transparent 70%);
  z-index: 0;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: 800;
  color: #333;
  margin-bottom: 15rpx;
  position: relative;
  z-index: 1;
}

.subtitle {
  font-size: 26rpx;
  color: #ff6b00;
  font-weight: 500;
  position: relative;
  z-index: 1;
}

/* 记录列表 */
.content {
  padding: 0 10rpx;
}

.exploration-card {
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
}

.exploration-card::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #ff6b00, #ff8c00);
}

.exploration-card:hover {
  transform: translateY(-5rpx);
  box-shadow: 0 15rpx 40rpx rgba(0, 0, 0, 0.15);
}

.card-image {
  width: 100%;
  height: 220rpx;
  position: relative;
}

.card-image::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60rpx;
  background: linear-gradient(to top, rgba(0,0,0,0.5), transparent);
}

.card-content {
  padding: 25rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  flex: 1;
  margin-right: 15rpx;
}

.card-distance {
  font-size: 22rpx;
  color: #ff6b00;
  background: linear-gradient(45deg, #fff0e6, #ffe6d9);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 0, 0.1);
}

.card-date {
  display: block;
  font-size: 22rpx;
  color: #888;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.card-description {
  font-size: 26rpx;
  color: #555;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  font-size: 20rpx;
  color: #ff6b00;
  background: linear-gradient(45deg, #fff0e6, #ffe6d9);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 0, 0.1);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 60rpx 40rpx;
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.08);
  margin-top: 30rpx;
  text-align: center;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
  opacity: 0.8;
}

.empty-text {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 20rpx;
}

.empty-subtext {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 50rpx;
  line-height: 1.5;
}

.explore-btn {
  width: 70%;
  background: linear-gradient(45deg, #ff6b00, #ff8c00);
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 700;
  padding: 25rpx 0;
  box-shadow: 0 10rpx 20rpx rgba(255, 107, 0, 0.3);
  border: none;
  transition: all 0.3s ease;
}

.explore-btn:hover {
  transform: translateY(-3rpx);
  box-shadow: 0 15rpx 25rpx rgba(255, 107, 0, 0.4);
}