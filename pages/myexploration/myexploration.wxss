/* 我的探索页样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #fff5f0 0%, #ffe8d6 50%, #ffd4b3 100%);
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

/* 顶部标题 */
.header {
  padding: 40rpx 30rpx;
  text-align: center;
  background: linear-gradient(135deg, #ff7d00, #ff5e00);
  border-radius: 25rpx;
  box-shadow: 0 8rpx 25rpx rgba(255, 125, 0, 0.3);
  margin-bottom: 30rpx;
  position: relative;
  overflow: hidden;
}

.header::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  animation: shine 3s infinite;
}

@keyframes shine {
  0% {
    left: -100%;
  }
  100% {
    left: 100%;
  }
}

.title {
  display: block;
  font-size: 42rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 15rpx;
  position: relative;
  z-index: 1;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
  position: relative;
  z-index: 1;
}

/* 记录列表 */
.content {
  padding: 0 10rpx;
}

.exploration-card {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 25rpx;
  box-shadow: 0 6rpx 20rpx rgba(255, 125, 0, 0.15);
  transition: all 0.3s ease;
  position: relative;
  border: 2rpx solid #fff2e6;
}

.exploration-card::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #ff7d00, #ff9500, #ff7d00);
}

.exploration-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 10rpx 30rpx rgba(255, 125, 0, 0.25);
  border-color: #ffe0cc;
}

.card-image {
  width: 100%;
  height: 260rpx;
  position: relative;
  overflow: hidden;
}

.card-image image {
  width: 100%;
  height: 100%;
  transition: transform 0.4s ease;
}

.exploration-card:active .card-image image {
  transform: scale(1.03);
}

.card-image::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60rpx;
  background: linear-gradient(to top, rgba(255, 125, 0, 0.3), transparent);
}

.card-content {
  padding: 25rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  margin-right: 15rpx;
  line-height: 1.3;
}

.card-distance {
  font-size: 22rpx;
  color: white;
  background: linear-gradient(45deg, #ff7d00, #ff5e00);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 600;
  box-shadow: 0 3rpx 8rpx rgba(255, 125, 0, 0.3);
}

.card-date {
  display: block;
  font-size: 22rpx;
  color: #999;
  margin-bottom: 15rpx;
  font-weight: 400;
}

.card-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  font-size: 20rpx;
  color: #ff7d00;
  background: #fff5f0;
  padding: 6rpx 16rpx;
  border-radius: 18rpx;
  font-weight: 500;
  border: 1rpx solid #ffe0cc;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 60rpx 30rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(255, 125, 0, 0.15);
  margin-top: 40rpx;
  text-align: center;
  border: 2rpx solid #fff2e6;
  position: relative;
}

.empty-state::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #ff7d00, #ff9500, #ff7d00);
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  opacity: 0.8;
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.5;
  padding: 0 20rpx;
}

.explore-btn {
  width: 70%;
  background: linear-gradient(135deg, #ff7d00, #ff5e00);
  color: white;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 600;
  padding: 25rpx 0;
  box-shadow: 0 8rpx 20rpx rgba(255, 125, 0, 0.3);
  border: none;
  transition: all 0.3s ease;
}

.explore-btn::after {
  border: none;
}

.explore-btn:active {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 25rpx rgba(255, 125, 0, 0.4);
}