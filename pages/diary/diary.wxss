/* index.wxss */
/* 全局样式 */
page {
  background-color: #f8f9fa;
  font-family: 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
  padding-bottom: 40rpx;
}

.container {
  padding: 20rpx 20rpx;
}

/* 头部导航 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  margin-bottom: 20rpx;
}

.back-btn, .menu-btn {
  width: 60rpx;
  height: 60rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
  padding: 0;
  margin: 0;
}

.back-icon, .share-icon {
  font-size: 28rpx;
  color: #333;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  letter-spacing: 1rpx;
}

/* 卡片通用样式 */
.card {
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.05);
  width: 100%;
}

.card:hover {
  box-shadow: 0 8rpx 25rpx rgba(0,0,0,0.08);
  transform: translateY(-2rpx);
}

.card-header {
  display: flex;
  align-items: center;
  padding: 28rpx 30rpx;
  border-bottom: 1rpx solid #f1f1f1;
}

.card-icon {
  font-size: 32rpx;
  margin-right: 18rpx;
  color: #ff7d00;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.card-content {
  padding: 30rpx;
}

/* 探索日记卡片 */
.journal-card .card-content {
  padding: 35rpx 30rpx;
}

.location-info {
  display: flex;
  align-items: center;
}

.location-icon {
  font-size: 28rpx;
  color: #666;
  margin-right: 15rpx;
}

.location-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
}

/* 照片上传区域 */
.upload-tip {
  font-size: 24rpx;
  color: #888;
  margin-bottom: 25rpx;
  padding-left: 5rpx;
}

.upload-container {
  display: flex;
  flex-wrap: wrap;
  gap: 25rpx;
}

.upload-btn {
  width: 140rpx;
  height: 140rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fafafa;
  transition: all 0.2s ease;
}

.upload-btn:hover {
  border-color: #ff7d00;
  background-color: #fff8f0;
}

.add-icon {
  font-size: 36rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #888;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 25rpx;
}

.image-item {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  position: relative;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 36rpx;
  height: 36rpx;
  background-color: rgba(0,0,0,0.6);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

/* 描述输入区域 */
.desc-input {
  width: 92%;
  min-height: 180rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  padding: 25rpx;
  font-size: 28rpx;
  line-height: 1.7;
  color: #333;
  background-color: #fafafa;
  resize: none;
}

.desc-input::placeholder {
  color: #bbb;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 15rpx;
}

/* 发布按钮 */
.publish-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #ff7d00, #ff5e00);
  color: #fff;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-top: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(255, 94, 0, 0.25);
  transition: all 0.3s ease;
}

.publish-btn:hover {
  transform: translateY(-3rpx);
  box-shadow: 0 12rpx 25rpx rgba(255, 94, 0, 0.3);
}

.publish-btn::after {
  border: none;
}

.arrow-icon {
  font-size: 28rpx;
  font-weight: bold;
}