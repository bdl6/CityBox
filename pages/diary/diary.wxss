/* 探索日记编辑页样式 */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  background-color: #f5f5f5;
}

/* 页面标题区 */
.header {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.page-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.place-name {
  font-size: 28rpx;
  color: #666;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 照片上传区 */
.photo-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.photos-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.photo-item {
  width: 30%;
  height: 200rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.uploaded-photo {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: #ff6b00;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.delete-icon {
  width: 20rpx;
  height: 20rpx;
}

.upload-placeholder {
  width: 30%;
  height: 200rpx;
  border: 2rpx dashed #ddd;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.upload-icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}

.upload-hint {
  font-size: 20rpx;
  color: #999;
  text-align: center;
}

/* 文字输入区 */
.text-section {
  flex: 1;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
}

.description-input {
  flex: 1;
  width: 100%;
  font-size: 28rpx;
  color: #333;
  border: none;
  resize: none;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.word-count {
  align-self: flex-end;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 底部提交区 */
.footer-section {
  display: flex;
  justify-content: center;
}

.submit-btn {
  width: 80%;
  background-color: #ff6b00;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.submit-btn[disabled] {
  background-color: #ccc;
}